{% extends ('Site/base.html.twig') %}

{% block bodyClass %}gallery{% endblock %}

{% block content %}
    <main id="main">
        <!-- Home Section -->
        {% set bgImage = asset('build/site/images/background/section-bg-19.jpg') %}

        {% if slider is not null %}
            {% set bgImage = slider.image_link %}
        {% endif %}

        <section class="page-section bg-dark-alfa-50 bg-scroll" data-background="{{ bgImage }}" id="home">
            <div class="container relative">

                <div class="row">

                    <div class="col-md-8">
                        <div class="wow fadeInUpShort" data-wow-delay=".1s">
                            <h1 class="hs-line-7 mb-20 mb-xs-10">{{ 'navi.images' | trans }}</h1>
                        </div>
                        {#                        <div class="wow fadeInUpShort" data-wow-delay=".2s">#}
                        {#                            <p class="hs-line-6 opacity-075 mb-20 mb-xs-0">#}
                        {#                                Extraordinary art team &&nbsp;creative minimalism lovers#}
                        {#                            </p>#}
                        {#                        </div>#}
                    </div>

                    <div class="col-md-4 mt-30 wow fadeInUpShort" data-wow-delay=".1s">
                        {% include 'Site/Components/breadcrumbs.html.twig' with {
                            activePage: 'navi.images' | trans
                        } %}
                    </div>

                </div>

            </div>
        </section>
        <!-- End Home Section -->

        <!-- Section -->
        <section class="page-section mt-30">
            <div class="container relative">

                <!-- Photo Grid -->
                <div class="row mb-30 mb-xs-10">

                    {% for image in images %}
                        <!-- Photo Item -->
                        <div class="col-md-4">

                            <div class="post-prev-img mb-30 wow fadeScaleIn" data-wow-duration="1s">
                                <a href="{{ image.file }}" class="lightbox-gallery-2 mfp-image">
                                    <img src="{{ image.thumb_image }}" alt="{{ default_alt_tag }}" />
                                </a>
                            </div>

                        </div>
                        <!-- End Photo Item -->
                    {% endfor %}

                </div>
                <!-- End Photo Grid -->

            </div>
        </section>
        <!-- End Section -->

{#        {{ include('Site/Components/contact.html.twig') }}#}

    </main>
{% endblock %}
{% block pageStyleSheets %}
    {{ encore_entry_link_tags('css/site/pages/gallery') }}
{% endblock %}
