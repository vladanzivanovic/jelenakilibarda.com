{#                                </div><!-- Row -->#}
{#                            </div>#}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Stranica</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.select('Stranica', 'select-box', 'page', IS_EDIT ? slider.page : '' , sitePages, '', 'w-100') }}
                                </div>
                            </div><!-- Col -->
