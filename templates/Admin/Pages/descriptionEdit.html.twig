{% extends 'Admin/base.html.twig' %}

{% set textTypes = [
    {'title': 'Biografija', 'value': constant('App\\Entity\\Description::TYPE_BIOGRAPHY')},
    {'title': 'Repertoar', 'value': constant('App\\Entity\\Description::TYPE_REPERTOIRE')},
    {'title': 'Klavirski duo', 'value': constant('App\\Entity\\Description::TYPE_PIANO_DUO')},
] %}

{% set IS_EDIT = app.request.attributes.get('_route') == 'admin.edit_description_page' %}

{% set titlePrefix = IS_EDIT == true ? 'Izmena' : 'Dodavanje' %}
{% set title = titlePrefix ~ ' teksta' %}

{% block title %}{{ title }}{% endblock %}
{% block bodyClass %}description-edit{% endblock %}

{% block content %}

    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: title } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}

    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Tekstovi</h4>
        </div>
    </div>

    <form id="edit_form" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Tip teksta</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.select('', 'description_select_box', 'type', IS_EDIT ? description.type : '' , textTypes, '', 'w-100') }}
                                </div>
                            </div><!-- Col -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% for language in languages %}
            {% set trans = IS_EDIT ? description.translationByLocale(language.code) : '' %}
            <div class="row">
                <div class="col-md-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">{{ language.name|upper }}</h6>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="form-group">
                                            {{ form.textarea('Opis', 'description_'~language.code, trans.description ?? null , 'description_'~language.code, 10, '', 'form-control') }}
                                        </div>
                                    </div>
                                </div><!-- Col -->
                            </div><!-- Row -->
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Slike</h6>
                        <div class="row">
                            {% include 'Moduls/dropzone.html.twig' with {'dropzoneName': 'description', 'class': 'dropzone-dark w-100', 'maxFiles': 100} %}
                        </div><!--Row-->
                    </div>
                </div>
            </div>
        </div>
    </form>
    {{ form.button('submit_btn', 'btn btn-outline-primary submit', 'Saƒçuvaj', 'button') }}
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ IS_EDIT ? 1 : 0 }};
        const ID = '{{ app.request.attributes.get('id') }}';

        {% if IS_EDIT %}
            const IMAGES = JSON.parse('{{ selectedImages|json_encode()|raw }}');
        {% endif %}

    </script>
{% endblock %}
